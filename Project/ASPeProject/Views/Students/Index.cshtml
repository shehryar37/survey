@model IEnumerable<SurveyProject.tblStudent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Index</h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn bg-blue col-white waves-effect" })
        </div>
        <div class="col-lg-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Student ID</th>
                    <th>Name</th>
                    <th>Gender</th>
                    <th>Class</th>
                    <th>Section</th>
                    <th>Admission Date</th>
                    <th>Actions</th>
                </tr>

                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.StudentID)</td>
                        <td>@Html.DisplayFor(modelItem => item.StudentName)</td>
                        <td>@Html.DisplayFor(modelItem => item.StudentGender)</td>
                        <td>@Html.DisplayFor(modelItem => item.tblSection.tblClass.ClassName)</td>
                        <td>@Html.DisplayFor(modelItem => item.tblSection.SectionName)</td>
                        <td>@Html.DisplayFor(modelItem => item.StudentAdmissionDate)</td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.StudentID }, new { @class = "btn bg-green waves-effect" })
                            @Html.ActionLink("Details", "Details", new { id = item.StudentID }, new { @class = "btn bg-blue waves-effect" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.StudentID }, new { @class = "btn btn-danger waves-effect" })
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
</div>

