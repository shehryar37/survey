@model SurveyProject.tblStudent

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Details</h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            <!-- Name -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Name</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.StudentName)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Email -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Email</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.StudentEmail)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gender -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Gender</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.StudentGender)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Admission Date -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Admission Date</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.StudentAdmissionDate)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Section</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.tblSection.SectionName)
                        </div>
                    </div>
                </div>
            </div>


            <!-- Back and Edit buttons -->
            <div class="col-lg-12">
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    @Html.ActionLink("Edit", "Edit", new { id = Model.StudentID }, new { @class = "btn btn-block bg-blue waves-effect" })
                </div>
            </div>
        </div>
        
    </div>
</div>

