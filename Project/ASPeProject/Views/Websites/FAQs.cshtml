@model IEnumerable<SurveyProject.tblFAQ>

@{
    ViewBag.Title = "FAQs";
    Layout = "~/Views/Shared/_LayoutWebsite.cshtml";
}

<section class="dento-blog-area mt-50">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-12">
                @foreach (var item in Model)
                {
                    <div class="single-blog-item style-2 d-flex flex-wrap align-items-center mb-50">
                        <!-- Blog Thumbnail -->
                        <div class="blog-thumbnail">
                            <a href="./blog-details.html">
                                <img src="~/Website/img/bg-img/16.jpg" alt="">
                            </a>
                        </div>
                        <!-- Blog Content -->
                        <div class="blog-content">
                            <a href="./blog-details.html" class="post-title"> @Html.DisplayFor(modelItem => item.FAQQuestion)</a>
                            <p>
                                @Html.DisplayFor(modelItem => item.FAQAnswer)
                            </p>
                            <div class="post-meta">
                                <a href="#"><i class="icon_clock_alt"></i> &nbsp;&nbsp;@Html.DisplayFor(modelitem => item.FAQDateTime)</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Banner{
    <div class="breadcumb-area bg-img bg-gradient-overlay" style="background-image: url(img/bg-img/12.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <h2 class="title">FAQs</h2>
                </div>
            </div>
        </div>
    </div>
}