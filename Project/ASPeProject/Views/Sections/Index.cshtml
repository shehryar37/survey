@model IEnumerable<SurveyProject.tblSection>

@{
    ViewBag.Title = "Section";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card">
    <div class="header">
        <h2>Index</h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">

            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary waves-effect" })

        </div>
        <div class="col-lg-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>
                        Section Name
                    </th>
                    <th>
                        Class Name
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SectionName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tblClass.ClassName)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SectionID }, new { @class = " btn bg-green waves-effect " })
                            @Html.ActionLink("Details", "Details", new { id = item.SectionID }, new { @class = " btn btn-info waves-effect" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.SectionID }, new { @class = "btn btn-danger waves-effect" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
