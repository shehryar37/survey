<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <title>@ViewBag.Title</title>

    <!-- Favicon-->
    <link rel="icon" href="favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="~/css/fonts.css" rel="stylesheet" type="text/css">
    <link href="~/css/icons.css" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="~/plugins/bootstrap/css/bootstrap.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="~/plugins/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/plugins/animate-css/animate.css" rel="stylesheet" />

    <!-- Morris Chart Css-->
    <link href="~/plugins/morrisjs/morris.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/css/style.css" rel="stylesheet">

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/css/themes/all-themes.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />

    <!-- jQuery js -->
    <script src="~/Website/js/jquery.min.js"></script>
</head>
<body class="theme-blue">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-blue">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Assigning name for current user -->
    @{
        if (Session["user"] != null) {
            SurveyProject.tblUser user = (SurveyProject.tblUser)Session["user"];
            ViewBag.user = user.UserName;
        } else {
            //Response.Redirect("~/Users/Login");
            ViewBag.user = "Tester";    // Replace this later
        }
    }

    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false"></a>
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand" href="javascript:void(0);">Administrator Panel</a>


            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right" style="padding-right: 1.5em;">
                    <!-- User Login -->
                    <li class="dropdown">
                        <a class="dropdown-toggle" role="button" href="javascript:void(0);" data-toggle="dropdown">
                            <i class="material-icons">account_circle</i>
                        </a>
                        <ul class="dropdown-menu">
                            <li class="header">
                                Hello, @ViewBag.user!
                            </li>
                            <li>
                                <a href="~/Users/Profile">
                                    <i class="material-icons">account_circle</i>
                                    <span>Profile</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Websites/Logout">
                                    <i class="material-icons">input</i>
                                    <span>Logout</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- #END# User Login -->
                </ul>
            </div>



        </div>
    </nav>
    <!-- #Top Bar -->

    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">


            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">MAIN NAVIGATION</li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Classes" ? "active" : "")">
                        <a href="~/Classes/Index">
                            <i class="material-icons">school</i>
                            <span>Classes</span>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Students" ? "active" : "")">
                        <a href="~/Students/Index">
                            <i class="material-icons">person</i>
                            <span>Student</span>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Faculties" ? "active" : "")">
                        <a href="~/Faculties/Index">
                            <i class="material-icons">work</i>
                            <span>Faculty / Staff</span>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "StudentRegReq" ? "active" :
                                 ViewContext.RouteData.Values["Controller"].ToString() == "FacultyRegReq" ? "active" : "")">
                        <a href="javascript:void(0);" class="menu-toggle waves-effect waves-block">
                            <i class="material-icons">inbox</i>
                            <span>Requests</span>
                        </a>
                        <ul class="ml-menu" style="display: none;">
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "StudentRegReq" ? "active" : "")">
                                <a href="~/StudentRegReq/Index">
                                    <span>Student</span>
                                </a>
                            </li>
                            <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "FacultyRegReq" ? "active" : "")">
                                <a href="~/FacultyRegReq/Index">
                                    <span>Faculty / Staff</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "FAQs" ? "active" : "")">
                        <a href="~/FAQs/Index">
                            <i class="material-icons">question_answer</i>
                            <span>FAQs</span>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Supports" ? "active" : "")">
                        <a href="~/Supports/Index">
                            <i class="material-icons">contact_support</i>
                            <span>Support</span>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Competitions" ? "active" : "")">
                        <a href="~/Competitions/Index">
                            <i class="material-icons">thumbs_up_down</i>
                            <span>Competitions</span>
                        </a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Surveys" ? "active" : "")">
                        <a href="~/Surveys/Index">
                            <i class="material-icons">poll</i>
                            <span>Surveys</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; 2019 - 2020 <a href="javascript:void(0);">Environmental Survey</a>.
                </div>
                <div class="version">
                    <b>Version: </b> 1.0.8
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>

    <!-- Jquery Core Js -->
    <script src="~/plugins/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="~/plugins/bootstrap/js/bootstrap.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="~/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/plugins/node-waves/waves.js"></script>

    <!-- Select Plugin Js -->
    <script src="plugins/bootstrap-select/js/bootstrap-select.js"></script>

    <!-- Jquery CountTo Plugin Js -->
    <script src="~/plugins/jquery-countto/jquery.countTo.js"></script>

    <!-- Morris Plugin Js -->
    <script src="~/plugins/raphael/raphael.min.js"></script>
    <script src="~/plugins/morrisjs/morris.js"></script>

    <!-- Custom Js -->
    <script src="~/js/admin.js"></script>
    <script src="~/js/pages/index.js"></script>

    <!-- Demo Js -->
    <script src="~/js/demo.js"></script>

    <!-- Autosize Plugin Js -->
    <script src="~/plugins/autosize/autosize.js"></script>

    <script>
        autosize(document.querySelectorAll('textarea'));
    </script>
</body>
</html>
