@model SurveyProject.tblUser

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Delete</h2>
        <small>Are you sure you want to delete this?</small>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            <!-- Name -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <label>Name</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.tblStudent.StudentName)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Registration No -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <label>Student ID</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.StudentNo)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Registration Status -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <label>Registration Status</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.UserRegStatus)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Request Date -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <label>Request Date</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.UserRequestDate)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Class -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <label>Class</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.tblStudent.tblSection.tblClass.ClassName)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section -->
            <div class="form-group">
                <div class="col-md-12">
                    <div class="col-md-2">
                        <label>Section</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.tblStudent.tblSection.SectionName)
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <!-- Back and Confirm Delete Buttons -->
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                        </div>
                        <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                            <input type="submit" value="Delete" class="btn btn-block btn-danger waves-effect" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>



