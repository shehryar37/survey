@model SurveyProject.tblUser

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    

    <div class="card">
        <div class="header">
            <h2>Change Status</h2>
        </div>
        <div class="body clearfix">
            <!-- Keeping these hidden because we don't want admin to see nor edit them -->
            @Html.HiddenFor(model => model.UserID)
            @Html.HiddenFor(model => model.StudentNo)
            @Html.HiddenFor(model => model.UserRequestDate)

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- Name -->
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-2">
                        <label>Name</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line disabled">
                            @Html.DisplayFor(model => model.tblStudent.StudentName)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Registration No -->
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-2">
                        <label>Student ID</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line disabled">
                            @Html.DisplayFor(model => model.StudentNo)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Registration Status -->
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-2">
                        <label>Registration Status</label>
                    </div>

                    @{ List<string> list = new List<string> { "Requested", "Accepted", "Rejected" }; }
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DropDownListFor(model => model.UserRegStatus, new SelectList(list), htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserRegStatus, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reject Reason -->
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-2">
                        <label>Rejection Reason</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.UserReqRejectReason, new { htmlAttributes = new { @class = "form-control", placeholder = "Leave blank if none..." } })
                        </div>
                    </div>
                </div>
            </div>

            <!-- Back and Save buttons -->
            <div class="col-lg-12">
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <input type="submit" value="Change Status" class="btn btn-block bg-blue waves-effect" />
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
