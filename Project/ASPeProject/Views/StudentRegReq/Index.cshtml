@model IEnumerable<SurveyProject.tblUser>

@{
    ViewBag.Title = "StudentReqIndex";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Student Requests</h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            <table class="table table-bordered table-hover">
                <!-- Header of Table -->
                <tr>
                    <th>Student ID</th>
                    <th>Student Name</th>
                    <th>Class</th>
                    <th>Section</th>
                    <th>Registration Status</th>
                    <th>Request Date</th>
                    <th>Actions</th>
                </tr>

                <!-- Body of Table -->
                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.StudentNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.tblStudent.StudentName)</td>
                        <td>@Html.DisplayFor(modelItem => item.tblStudent.tblSection.tblClass.ClassName)</td>
                        <td>@Html.DisplayFor(modelItem => item.tblStudent.tblSection.SectionName)</td>
                        <td>@Html.DisplayFor(modelItem => item.UserRegStatus)</td>
                        <td>@Html.DisplayFor(modelItem => item.UserRequestDate)</td>
                        <td>
                            @Html.ActionLink("Change Status", "Edit", new { id = item.UserID }, new { @class = "btn bg-green waves-effect" })
                            @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn bg-blue waves-effect" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn btn-danger waves-effect" })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>