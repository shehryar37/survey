@model IEnumerable<SurveyProject.tblCompetition>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Index</h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn bg-blue col-white waves-effect" })
        </div>
        <div class="col-lg-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Type</th>
                    <th>No. of Participants</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>

                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.CompName)</td>
                        <td>@Html.DisplayFor(modelItem => item.CompDescription)</td>
                        <td>@Html.DisplayFor(modelItem => item.tblUserType.UserTypeName)</td>
                        <td>@Html.DisplayFor(modelItem => item.tblCompParticipants.Count)</td>
                        <td>@Html.DisplayFor(modelItem => item.CompDate)</td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.CompID }, new { @class = "btn bg-green waves-effect" })
                            @Html.ActionLink("Details", "Details", new { id = item.CompID }, new { @class = "btn bg-blue waves-effect" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.CompID }, new { @class = "btn btn-danger waves-effect" })
                            @Html.ActionLink("Select Winner", "SelectWinner", new { id = item.CompID }, new { @class = "btn btn-success waves-effect" })
                        </td>
                    </tr>
                }

            </table>
        </div>

    </div>
</div>



