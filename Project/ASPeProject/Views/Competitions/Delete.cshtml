@model SurveyProject.tblCompetition

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Delete</h2>
        <small>Are you sure you want to delete this?</small>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            <!-- Name -->
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <label>Name</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.CompName)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <label>Description</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.CompDescription)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Date -->
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <label>Date</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.CompDate)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Type -->
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12">
                        <label>Type</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-12">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.tblUserType.UserTypeName)
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <!-- Back and Edit buttons -->
                <div class="col-lg-12">
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        <input type="submit" value="Delete" class="btn btn-block btn-danger waves-effect" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>