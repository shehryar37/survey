@model SurveyProject.tblCompetition

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card">
        <div class="header">
            <h2>Create</h2>
        </div>
        <div class="body clearfix">
            <div class="col-lg-12">
                <!-- Name -->
                <div class="form-group">
                    <div class="col-md-2">
                        <label>Name</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.CompName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group">
                    <div class="col-md-2">
                        <label>Description</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.CompDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CompDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!-- Type -->
                <div class="form-group">
                    <div class="col-md-2">
                        <label>Type</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            @Html.DropDownList("UserTypeID", null, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <!-- Competition Date -->
                <div class="form-group">
                    <div class="col-md-2">
                        <label>Date</label>
                    </div>
                    <div class="col-md-10">
                        <div class="form-line">
                            <input type="date" id="CompetitionDate" name="CompetitionDate" class="form-control" required />
                        </div>
                    </div>
                </div>

                <!-- Back and Submit Buttons -->
                <div class="form-group">
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        <input type="submit" value="Create" class="btn btn-block bg-blue col-white waves-effect" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
