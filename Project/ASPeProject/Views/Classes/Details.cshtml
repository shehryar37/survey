@model SurveyProject.tblClass

@{
    ViewBag.Title = "Class";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="card">
    <div class="header">
        <h2> Details </h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            


                <dl class="dl-horizontal">
                    <dt>
                        Class Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.ClassName)
                    </dd>

                </dl>
            
                <div class="form-group">
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.ClassID }, new { @class = "btn btn-block bg-white col-black waves-effect" })
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-blue waves-effect" })
                    </div>
                </div>
        </div>
    </div>
</div>
     


