@model IEnumerable<SurveyProject.tblSurvey>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Index</h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn bg-blue waves-effect" })
        </div>
        <div class="col-lg-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Title</th>
                    <th>Conducts</th>
                    <th>Due Date</th>
                    <th>Actions</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(model => item.SurveyTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.SurveyConducts)
                        </td>
                        <td>
                            @Html.DisplayFor(model => item.SurveyDueDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SurveyID }, new { @class = "btn bg-green waves-effect" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.SurveyID }, new { @class = "btn btn-info waves-effect" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SurveyID }, new { @class = "btn btn-danger waves-effect" })
                        </td>
                    </tr>

                }

            </table>
        </div>
    </div>
</div>
