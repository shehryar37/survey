@model SurveyProject.tblSurvey

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Delete</h2>
        <small>Are you sure you want to delete this?</small>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            <!-- Title -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Title</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.SurveyTitle)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Due Date -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Due Date</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.SurveyDueDate)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Description -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Description</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.SurveyDescription)
                        </div>
                    </div>
                </div>
            </div>

            <!-- UserTypeID -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Audience</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.tblUserType.UserTypeName)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Conducts -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2">
                        <label>Conducts</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.SurveyConducts)
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <!-- Back and Edit buttons -->
                <div class="col-lg-12">
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        <input type="submit" value="Delete" class="btn btn-block btn-danger waves-effect" />
                    </div>
                </div>
            }
        </div>

    </div>
</div>

