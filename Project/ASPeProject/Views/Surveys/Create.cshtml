@model SurveyProject.tblSurvey

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="card">
        <div class="header">
            <h2>Create</h2>
        </div>
        <div class="body clearfix">
            <div class="col-lg-12">
                <!--Title-->
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label>Survey Title</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.SurveyTitle, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SurveyTitle, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--Due Date-->
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label>Survey Due Date</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <input type="date" id="surveyDueDate" name="surveyDueDate" class="form-control" required/>
                    </div>
                </div>

                <!--Description-->
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label>Survey Description</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <div class="form-line">
                            @Html.EditorFor(model => model.SurveyDescription, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SurveyDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--UserTypeID-->
                <div class="form-group">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
                        <label>Audience</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-10 col-xs-10">
                        <div class="form-line">
                            @Html.DropDownList("UserTypeID", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserTypeID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <!--ADD CODE FOR IMAGE UPLOAD HERE-->
            </div>


            <!-- Back and Submit buttons -->
            <div class="form-group">
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                </div>
                <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                    <input type="submit" value="Create" class="btn btn-block bg-blue col-white waves-effect" />
                </div>
            </div>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>