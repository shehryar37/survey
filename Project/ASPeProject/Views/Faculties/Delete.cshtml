@model SurveyProject.tblFaculty

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Delete</h2>
        <small>Are you sure you want to delete this?</small>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            <!-- Name -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2 font-bold">
                        <label>Name</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.FacultyName)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Email -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2 font-bold">
                        <label>Email</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.FacultyEmail)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Specification -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2 font-bold">
                        <label>Email</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.FacultySpecification)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Gender -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2 font-bold">
                        <label>Gender</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.FacultyGender)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Joining Date -->
            <div class="col-lg-12">
                <div class="form-group">
                    <div class="col-lg-2 font-bold">
                        <label>Joining Date</label>
                    </div>
                    <div class="col-lg-10">
                        <div class="form-line">
                            @Html.DisplayFor(model => model.FacultyJoiningDate)
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm()) {
                @Html.AntiForgeryToken()

                <div class="col-lg-12">
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-block bg-white col-black waves-effect" })
                    </div>
                    <div class="col-lg-2 col-md-4 col-sm-6 col-xs-12">
                        <input type="submit" value="Delete" class="btn btn-block btn-danger waves-effect" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>



