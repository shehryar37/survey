@model IEnumerable<SurveyProject.tblFaculty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="header">
        <h2>Index</h2>
    </div>
    <div class="body clearfix">
        <div class="col-lg-12">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn bg-blue waves-effect" })
        </div>
        <div class="col-lg-12">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Faculty ID</th>
                    <th>Name</th>
                    <th>Specification</th>
                    <th>Gender</th>
                    <th>Joining Date</th>
                    <th>Actions</th>
                </tr>

                @foreach (var item in Model) {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.FacultyID)</td>
                        <td>@Html.DisplayFor(modelItem => item.FacultyName)</td>
                        <td>@Html.DisplayFor(modelItem => item.FacultySpecification)</td>
                        <td>@Html.DisplayFor(modelItem => item.FacultyGender)</td>
                        <td>@Html.DisplayFor(modelItem => item.FacultyJoiningDate)</td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.FacultyID }, new { @class = "btn bg-green waves-effect" })
                            @Html.ActionLink("Details", "Details", new { id = item.FacultyID }, new { @class = "btn bg-blue waves-effect" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.FacultyID }, new { @class = "btn btn-danger waves-effect" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

